{
	"compilerOptions": {
		"allowJs": true,

		"declaration": true,
		"esModuleInterop": true,
		"isolatedModules": true,

		"lib": ["es2022", "dom"],

		"module": "preserve",
		"moduleDetection": "force",
		"noEmit": true,
		"noImplicitOverride": true,
		"noUncheckedIndexedAccess": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,

		"strict": true,
		"target": "es2022",
		"verbatimModuleSyntax": true,
		"jsx": "react-jsx"
	},
	"exclude": ["node_modules", "dist"],
	"include": ["src"]
}
